
<p>

<% if user_signed_in? %>
  <% if current_user.admin %>
    <h4 class="text-center"><%= link_to 'Create new item', new_item_path %></h4>
  <% end %>
<% end %>

</p>
<table class= "table">
  <thead class="thead-dark col-sm-3">
    <tr>
      <th>Items Name</th>
      <th>Detail</th>
      <th>Shopping cart</th>
      <% if user_signed_in? %>
        <% if current_user.admin %>
          <th>Action</th>
        <% end %>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item|%>
        <tr>
            <td><%= item.name%></td>

            <td><%= link_to 'Show ', item_path(:id => item.id), class: "btn btn-info" %></td>
            
            <% if @cart.include?(item) %>
              <td><%= link_to "Remove from cart", item_remove_from_cart_path(item), method: :delete, class: "btn btn-danger" %> </td>
             <% else %> 
               <td><%= button_to "Add to cart", item_add_to_cart_path(item),class:"btn btn-success" %> </td>
            <% end %> 
            <% if user_signed_in? %>
              <% if current_user.admin %>
              
                <td><%= link_to 'Edit', edit_item_path(item),class:"btn btn-secondary" %> &nbsp &nbsp
                <%= link_to 'Delete', item_path(:id => item.id), method: :delete, data: {confirm: "Are you sure?"},class:"btn btn-secondary" %></td>
              <% end %>
            <% end %>
        </tr>
    <%end%>
  </tbody>
</table>