
<div class="col-md-6 col-md-offset-3 center_class">
  <%= form_with(model: @item, local: true) do |f| %>

    <div class="mb-3">
      <b><%= f.label :name %></b><br />
      <%= f.text_field :name, required: true, autocomplete: "Enter Name", class: "form-control" %>
    </div>

    <div class="mb-3">
      <b><%= f.label :description %></b><br />
      <%= f.text_area :description, required: true, autocomplete: "Enter Description", class: "form-control" %>
    </div>

    <div class="mb-3">
      <b><%= f.label :price %></b><br />
      <%= f.number_field :price, min: 0, required: true, autocomplete: "Enter price", class: "form-control" %>
    </div>

    <div class="mb-3">
      <b><%= f.label :status %></b><br />
      <%= f.number_field :status, min: 0, max: 1, required: true, autocomplete: "Status", class: "form-control" %>
    </div>

    <%= f.fields_for :category_item do |p| %>
      <div class="mb-3">
        <b><%= f.label "Category" %></b><br>
        <%= f.select :category_ids, @categories, {}, multiple: true, class: "form-control" %>
      </div>
    <% end %>
    <div class = "mb-3">
      <%= f.label :image %>
      <%= f.file_field :image, class: "btn btn-secondary" %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    </div>

<% end %>
</div>

<%= link_to 'back', items_path, class: "btn btn-dark mr-sm-3" %>
