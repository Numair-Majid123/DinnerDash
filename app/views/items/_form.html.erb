<div class="col-md-6 col-md-offset-3">
  <%= form_with(model: @item, local: true) do |f| %>


    <div class="mb-3">
      <b><%= f.label :name %></b><br />
      <%= f.text_field :name, autocomplete: "Enter Name" %>
    </div>

    <div class="mb-3">
      <b><%= f.label :description %></b><br />
      <%= f.text_area :description, autocomplete: "Enter Description" %>
    </div>

    <div class="mb-3">
      <b><%= f.label :price %></b><br />
      <%= f.number_field :price, autocomplete: "Enter price" %>
    </div>

    <div class="mb-3">
      <b><%= f.label :status %></b><br />
      <%= f.number_field :status, autocomplete: "Enter price" %>
    </div>

      <%= f.fields_for :category_item do |p| %>
        <div class="mb-3">
          <b><%= f.label "Category" %></b><br>
          <%= f.select :category_ids, Category.all.collect { |x| [x.name, x.id]}, {}, :multiple => true %>
          <%# <%= collection_select(:categories, :category_id, @categories, :id, :name, {}, {:multiple => true})%>
        </div>

      <% end %>
    <div class = "mb-3">
      <%= f.file_field :image, class: "btn btn-secondary" %>
    </div>

    <div class="actions">
      <%= f.submit "Add Item", class: 'btn btn-primary' %>
    </div>

<% end %>
</div>