

<table>
  <thead>
    <tr>
      <th>Items</th>
      <th>Description</th>
      <th>Price</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item|%>
        <tr>
            <td><%= item.name%></td>
            <td><%= item.description%></td>
            <td><%= item.price%></td>
            <td><%= item.status%></td>
            <td><%= link_to 'Edit', edit_item_path(item) %> |
            <%= link_to 'Delete', item_path(:id => item.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <%end%>
  </tbody>
</table>
<p>
<%= link_to 'Create new item', new_item_path %>
</p>