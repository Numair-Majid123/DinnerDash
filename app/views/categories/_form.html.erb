<div class="col-md-6 col-md-offset-3">
<%= form_with(model: @category, local: true) do |f| %>


  <div class="mb-3">
    <%= f.label :name %><br />
    <%= f.text_field :name, autocomplete: "Enter Name" %>
  </div>

  <div class="actions">
    <%= f.submit "Add Category", class: 'btn btn-primary' %>
  </div>

<% end %>
</div>