<div class="col-md-6 col-md-offset-3" style = "padding-left: 33%">
<%= form_with(model: @category, local: true) do |f| %>


  <div class="mb-3">
    <b><%= f.label :name %></b><br />
    <%= f.text_field :name, autocomplete: "Enter Name", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Add Category", class: 'btn btn-primary' %>
  </div>

<% end %>
</div>

<%= link_to 'back', categories_path, class: "btn btn-dark mr-sm-3" %>
